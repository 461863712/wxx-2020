/**index.wxss**/
page{
  widows: 100%;
  height: 100%;
}
.container{
  position: relative;
  widows: 100%;
  height: 100%;
}
.user{
  width: 100%;
  height: 20%;
  display: flex;
  flex-direction: row;
  margin-top: -60%;
}
.user image{
  width:100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.user text{
  margin-left: 15rpx;
  line-height: 100rpx;
}
.audio{
  width: 100%;
  display: flex;

}
.audio audio{
  width: 100%;
  height: 170rpx;
  background: #ccc;
}
.canvas-area{
  width: 100%;
  height: 80%;
  background-color: #f8f8f8;
}
.myCanvas{
  width: 100%;
  height: 100%;
}
.canvas-tools{
  position: fixed;
  left: 0;
  bottom: 20rpx;
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.box{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: rebeccapurple;
}
.box image{
  width: 100rpx;
  height: 100rpx;
}
.box1{
  background-color: #99cccc;
}
.box2{
  background-color: #0099cc;
}
.box3{
  background-color: #cc0033;
}
.box4{
  background-color: #ff9900;
}
.box5{
  background-color: #ccc;
}